<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAgenda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Título-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Agenda"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">


        </TextView>

        <!--Layout com as check boxes-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exibir somente trabalhos ativos"
                android:textSize="15dp">

            </CheckBox>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Visualização"
                android:textSize="15dp">

            </CheckBox>

            <!--Botão cancelar trabalho-->
            <Button
                android:id="@+id/cancelarTrabBtn"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="CANCELAR TRABALHO"
                android:textSize="20dp"
                android:layout_marginTop="25dp">

            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cadastro">

        <!--campos de texto referentes as informacoes necessarias para o cadastro-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!--campo do nome-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nomeCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome"
                        android:inputType="textCapWords|textAutoCorrect"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--data de nascimento-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dataNascTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_calendar_month_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Data de nascimento"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo do cpf-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cpfCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="CPF"
                        android:inputType="number"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo do endereço-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/enderecoCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Endereço"
                        android:inputType="textCapWords|textAutoCorrect|textPostalAddress|textMultiLine"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo do email-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo do telefone-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/celularCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Telefone"
                        android:inputType="phone"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo da descrição-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/descricaoCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:endIconContentDescription="content_description_end_icon"
                    app:endIconDrawable="@drawable/ic_baseline_edit_24"
                    app:endIconMode="custom"
                    app:errorEnabled="true"
                    app:helperText="Escreva um pouco sobre você"
                    app:helperTextEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descrição"
                        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo da senha-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/senhaCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="true"
                    app:counterEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Senha"
                        android:inputType="textPassword"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--campo da confirmação da senha-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/senhaConfirmCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    app:passwordToggleEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Confirme sua senha"
                        android:inputType="textPassword"
                        android:textSize="20dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <!--confirmacao de ocupacao-->
                    <TextView
                        android:id="@+id/opcaoTrabalhadorTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:text="Se cadastrar como trabalhador?"
                        android:textSize="17dp" />

                    <CheckBox
                        android:id="@+id/usuarioCheck"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Trabalhador Informal"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <!--botao para concluir o cadastro-->
                        <Button
                            android:id="@+id/concluirCadastroBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:text="Cadastrar"
                            android:textAllCaps="false"
                            android:textSize="20sp" />

                        <!--botao para voltar a tela de login-->
                        <Button
                            android:id="@+id/voltarLoginBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Voltar"
                            android:textAllCaps="false"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
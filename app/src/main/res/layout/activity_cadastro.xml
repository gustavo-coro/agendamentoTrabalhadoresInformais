<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro">

        <!--campos de texto referentes as informacoes necessarias para o cadastro-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cadastro"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:layout_marginVertical="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--nome-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nome completo:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/nomeCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--cpf-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CPF:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/cpfCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--email-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/emailCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--telefone-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/celularCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--senha-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/senhaCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--confirmacao de senha-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirme sua senha:"
                    android:layout_marginLeft="3dp"
                    android:textSize="17dp"/>

                <EditText
                    android:id="@+id/senhaConfirmCadastroTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!--confirmacao de ocupacao-->
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Trabalhador"
                    android:textSize="15dp" />

                <!--botao para concluir o cadastro-->
                <Button
                    android:id="@+id/concluirCadastroBtn"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Cadastrar"
                    android:textSize="15sp"
                    android:gravity="center">

                </Button>

                <!--botao para voltar a tela de login-->
                <Button
                    android:id="@+id/voltarLoginBtn"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Voltar ao login"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp">

                </Button>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
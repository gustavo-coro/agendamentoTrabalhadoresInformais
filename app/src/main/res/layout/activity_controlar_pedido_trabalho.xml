<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlarPedidoTrabalho">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova solicitação de trabalho"
            android:textSize="35sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"/>

        <!--LinearLayout que engloba as informacoes do servico pedido-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário:"
                    android:textSize="24sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/nomeUsuarioTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Serviço:"
                    android:textSize="24sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/tipoServicoTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serviço"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data:"
                    android:textSize="24sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/dataTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/1970"
                    android:textSize="24sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora de Início:"
                    android:textSize="24sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/horaInicioTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="24sp"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp">

            <Button
                android:id="@+id/recusarBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recusar"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/aceitarBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aceitar"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/cancelarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
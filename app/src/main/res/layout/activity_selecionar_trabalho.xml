<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelecionarTrabalho">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="Selecionar Trabalhos"
                android:textAlignment="center"
                android:textSize="35dp"></TextView>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/trabalhosNView"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <!--Botão confrima seleção de trabalhos-->
            <Button
                android:id="@+id/confirmaBtn"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:text="Confirmar"
                android:textSize="20dp"></Button>

            <!--Botão cancela seleção de trabalhos-->
            <Button
                android:id="@+id/cancelaBtn"
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cancelar"
                android:textSize="20dp"></Button>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>